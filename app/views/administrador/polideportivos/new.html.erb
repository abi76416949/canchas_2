<%= form_with model: [:administrador, @polideportivo], local: true do |f| %>

  <div class="form-group">
    <%= f.label :nombre, "Nombre" %>
    <%= f.text_field :nombre, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :ubicacion, "UbicaciÃ³n" %>
    <%= f.text_field :ubicacion, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :contacto, "Contacto" %>
    <%= f.text_field :contacto, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :imagen, "Subir Imagen" %>
    <%= f.file_field :imagen, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Crear Polideportivo', class: 'btn btn-primary' %>
  </div>
<% end %>
<% if @polideportivo.errors.any? %>
  <div class="errores">
    <h4>Errores:</h4>
    <ul>
      <% @polideportivo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

