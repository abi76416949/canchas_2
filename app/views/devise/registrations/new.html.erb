<div class="main-containerprin">
  <div class="background-div">
    <div class="centered-card-container">
      <div class="centered-card">
        <h2 class="form-label">Registrar Propietario</h2>

        <%= form_with url: user_registration_path, local: true do |f| %>
          <!-- Campos del Propietario -->
          <div class="form-field field">
            <%= f.label :nombre, "Nombre", class: "form-label" %>
            <%= f.text_field :nombre, name: 'propietario[nombre]', class: "form-input", required: true %>
          </div>

          <div class="form-field field">
            <%= f.label :direccion, "Dirección", class: "form-label" %>
            <%= f.text_field :direccion, name: 'propietario[direccion]', class: "form-input", required: true %>
          </div>

          <div class="form-field field">
            <%= f.label :contacto, "Contacto", class: "form-label" %>
            <%= f.text_field :contacto, name: 'propietario[contacto]', class: "form-input", required: true %>
          </div>

          <div class="form-field field">
            <%= f.label :polideportivo_id, "Asignar a Polideportivo", class: "form-label" %>
            <%= f.collection_select :polideportivo_id, Polideportivo.all, :id, :nombre, { prompt: "Seleccione un Polideportivo" }, { name: 'propietario[polideportivo_id]', class: "form-input" } %>
          </div>

          <!-- Campos del Usuario -->
          <div class="form-field field">
            <%= f.label :email, "Correo Electrónico", class: "form-label" %>
            <%= f.email_field :email, name: 'user[email]', class: "form-input", required: true %>
          </div>

          <div class="form-field field">
            <%= f.label :password, "Contraseña", class: "form-label" %>
            <%= f.password_field :password, name: 'user[password]', class: "form-input", required: true %>
          </div>

          <div class="form-field field">
            <%= f.label :password_confirmation, "Confirmar Contraseña", class: "form-label" %>
            <%= f.password_field :password_confirmation, name: 'user[password_confirmation]', class: "form-input", required: true %>
          </div>

          <!-- Botón de Guardar -->
          <div class="actions">
            <%= f.submit "Registrar Propietario", class: "button button-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>